<%= render 'shared/description', lead: "List of tennis players in database", description: nil %>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Born</th>
      <th scope="col">Nationality</th>
      <th scope="col">Age</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each_with_index do |player, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
      <td><%= player.full_date_of_birth %></td>
      <td><%= player.born %></td>
      <td><%= player.country %></td>
      <td><%= player.age %></td>
      <td>
        <%= link_to 'More...', player_path(player), class: "btn btn-info btn-sm" %>
        <%= link_to 'Edit', edit_player_path(player), class: "btn btn-success btn-sm" %>
        <%= link_to 'Delete', player_path(player), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <%= link_to 'Add player', new_player_path, class: "btn btn-success" %>
</div>

<%= render 'shared/paginator', collection: @players %>
