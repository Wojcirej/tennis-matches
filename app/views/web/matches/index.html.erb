<%= render 'shared/description', lead: "Available matches in database", description: nil %>

<table class="table table-hover table-dark">
  <tbody>
    <% @matches.each_with_index do |match, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= match.brief_summary %></td>
      <td>
        <%= link_to 'More...', match_path(match), class: "btn btn-info btn-sm" %>
        <%= link_to 'Edit', edit_match_path(match), class: "btn btn-success btn-sm" %>
        <%= link_to 'Delete', match_path(match), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row btn-group">
  <%= link_to 'Add match', new_match_path, class: "btn btn-success" %>
  <button class="btn btn-success" data-toggle="modal" data-target="#export-modal">
    Export to CSV
  </button>
</div>

<%= render 'shared/export_modal', data_type: "matches" %>
<%= render 'shared/paginator', collection: @matches %>
